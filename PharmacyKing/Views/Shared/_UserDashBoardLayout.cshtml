	<script>
		function errorAlert(message) {
			Swal.fire({
				icon: 'error',
				text: message,
				timer: 60000,
			})
		}

		function infoAlert(message) {
			Swal.fire({
				icon: 'info',
				text: message,
			})
		}

		function infoAlertWithStyles(message) {
			Swal.fire({
				title: 'Notification',
				icon: 'info',
				text: message,
			})
		}

		function successAlert(message) {
			Swal.fire({
				icon: 'success',
				text: message,
				timer: 60000,
			})
		}

		function newErrorAlert(message, url) {
			Swal.fire({
				icon: 'error',
				text: message,
			}).then((isConfirm) => {
				if (isConfirm) {
					location.reload(url);
				}
			})
		}

		function newSuccessAlert(message, url) {
			Swal.fire({
				icon: 'success',
				text: message,
			}).then((isConfirm) => {
				if (isConfirm) {
					location.reload(url);
				}
			})

		}

		// function newSuccessAlert(message, url) {
